<%- include("partials/header") %>

<div id="box" class="frontmatter center-text noborder">

    <% if (locals.joined) { %>
        <div class="joined">
            <img class="plane" src="/img/paper_airplane.png">
            <p>You've accepted an RSVP for <%=rsvp.title%></p>
            <p>Check your email for more details.</p>
        </div>
        <% } else { %>
        <div class="declined">
            <img class="plane" src="/img/paper_airplane.png">
            <p>Your RSVP for <%=rsvp.title%> been successfully declined.</p>
        </div>
    <% } %>

</div>

<script>
    setTimeout(() => {
        window.location.href = "http://<%=url%>/";
    }, 5000);
</script>

<%- include("partials/footer") %>